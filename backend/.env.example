# Server Configuration
PORT=8000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE

# Email Configuration (Gmail)
# Note: Replace these with your actual Gmail credentials
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Frontend URL (for CORS and password reset links)
FRONTEND_URL=http://localhost:3000

# Session Secret (generate a random string)
SESSION_SECRET=meetspot-secret-key-2025

# JWT Secret (if using JWT in future)
JWT_SECRET=meetspot-jwt-secret-2025
